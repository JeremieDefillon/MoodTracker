<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="shareStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
